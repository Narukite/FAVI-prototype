    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="Widget.FAVI.PreLogin.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="Widget.FAVI.MainMenu.Button" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/teal_700_medium</item>
        <item name="android:focusable">true</item>
    </style>

